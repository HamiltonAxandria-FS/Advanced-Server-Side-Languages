<h2> This is a Form </h2>

<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    {% if  variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}">
    {% endif %}
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="name" value="{{ variant.title }}" />
    </div>
    <div>
        <label>Product:</label>
        <select name="productId">
            {% for product in products %}
                <option 
                value="{{product.id}}" 
                {% if products.id == variant.productid %}selected="selected"{% endif %}> 
                {{ product.title }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div>
        <input type="submit" type="submit" />
    </div>
</form>