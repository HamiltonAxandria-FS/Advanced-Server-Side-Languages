{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>All products:</h2>
    <ul>
    {% for product in products %}
        <li>
            {{ product.title }} - 
            <a href="/products/{{ product.id }}">Edit</a>
            <a href="/products/{{ product.id }}/delete">Delete</a>
        </li>
    {% endfor %}
    </ul>
     <a href="/Products/new">Create New Product</a>
{% endblock %}